<?xml version="1.0" encoding="UTF-8" ?>
<t:SlidePopupView
    x:Class="SlideOverKit.Views.PopOverWithTriangleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:t="clr-namespace:SlideOverKit">

    <Grid Padding="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <AbsoluteLayout Grid.Row="0" HeightRequest="30">
            <Image
                AbsoluteLayout.LayoutBounds="0.92, 0, 0.05, 1"
                AbsoluteLayout.LayoutFlags="All"
                Aspect="Fill"
                Source="UpIcon.png" />
        </AbsoluteLayout>

        <StackLayout
            Grid.Row="1"
            Padding="15,10,15,30"
            BackgroundColor="White"
            HorizontalOptions="Fill"
            Spacing="20"
            VerticalOptions="Fill">

            <Label
                FontSize="24"
                HeightRequest="160"
                HorizontalTextAlignment="Center"
                Text="Build some Awesome SlideOver's" />

            <Image HeightRequest="100" Source="xamconsulting.png" />

            <Button
                x:Name="DoneButton"
                HeightRequest="60"
                Text="Close" />

        </StackLayout>
    </Grid>
</t:SlidePopupView>
